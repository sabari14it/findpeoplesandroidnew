<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.sabarirangan.androidapps.findpeoples">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".extras.FindPeoplesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.GoogleSigninActivity"
            android:theme="@style/ThemeOverlay.MyNoTitleActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.NewPost" />
        <activity
            android:name=".activities.ProjectDetail"
            android:label="project detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.NewPostTagsActivity" android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity
            android:name=".activities.SearchProjectActivity"
            android:screenOrientation="portrait" />

        <service android:name=".services.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".activities.UserProfileActivity"></activity>
    </application>

</manifest>